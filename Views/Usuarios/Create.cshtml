
@{
    @model Inmobiliaria.Models.Usuario
    ViewData["Title"] = "Create";
}

<h4>Agregar un usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" onsubmit="return validate(this);">

            <div asp-validation-summary="ModelOnly"  class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tipo de usuario</label>
                <select class="form-control" name="IdUsuarioTipo">
                    @foreach (var item in ViewBag.UsuarioTipo)
                    {
                        <option value="@item.IdUsuarioTipo">@(item.UsuarioTipoRol )</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioNombre" class="control-label"></label>
                <input asp-for="UsuarioNombre" class="form-control" />
                <span asp-validation-for="UsuarioNombre" class="text-danger">
                </span>

            </div>
            <div class="form-group">
                <label asp-for="UsuarioApellido" class="control-label"></label>
                <input asp-for="UsuarioApellido" class="form-control" />
                <span asp-validation-for="UsuarioApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioDni" class="control-label"></label>
                <input asp-for="UsuarioDni" class="form-control" />
                <span asp-validation-for="UsuarioDni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioTelefono" class="control-label"></label>
                <input asp-for="UsuarioTelefono" class="form-control" />
                <span asp-validation-for="UsuarioTelefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioDomicilio" class="control-label"></label>
                <input asp-for="UsuarioDomicilio" class="form-control" />
                <span asp-validation-for="UsuarioDomicilio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioEmail" class="control-label"></label>
                <input asp-for="UsuarioEmail"  class="form-control"  data-val-required="El campo no puede estar vacio." />
                <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioClave" class="control-label"></label>
                <input asp-for="UsuarioClave" class="form-control" />
                <span asp-validation-for="UsuarioClave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-info" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}