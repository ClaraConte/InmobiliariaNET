@{
    @model Inmobiliaria.Models.Contrato
    ViewData["Title"] = "Create";
}

    <h4>Crear Contrato</h4>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" onsubmit="return validate(this);">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label"> Código de la propiedad</label>
                    <input type="text" value="@ViewBag.Inmueble.IdInmueble" disabled class="form-control" />
                    <input asp-for="IdInmueble" value="@ViewBag.Inmueble.IdInmueble" type="hidden" class="form-control" />

                    <span asp-validation-for="IdInmueble" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label class="control-label">Dirección de la propiedad</label>
                    <input type="text" value="@ViewBag.Inmueble.InmuebleDomicilio" disabled class="form-control" />
                    <span asp-validation-for="ContratoDetalle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Seleccione Inquilino</label>
                    <select class="form-control" name="IdUsuario">
                        @foreach (var item1 in ViewBag.UsuariosInquilinos)
                        {
                            <option value="@item1.IdUsuario">@(item1.UsuarioNombre)</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label">Seleccione Garantes</label>
                    <select class="form-control" name="garantia[]" multiple>
                        @foreach (var item in ViewBag.UsuariosGarantes)
                        {
                            <option value="@item.IdUsuario">@(item.UsuarioNombre)</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="ContratoDetalle" class="control-label"></label>
                    <input type="text" asp-for="ContratoDetalle" class="form-control" />
                    <span asp-validation-for="ContratoDetalle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ContratoFechaInicio" class="control-label"></label>
                    <input asp-for="ContratoFechaInicio" class="form-control" />
                    <span asp-validation-for="ContratoFechaInicio" class="text-danger">
                    </span>
                </div>
                <div class="form-group">
                    <label asp-for="ContratoFechaFin" class="control-label"></label>
                    <input asp-for="ContratoFechaFin" class="form-control" />
                    <span asp-validation-for="ContratoFechaFin" class="text-danger">
                    </span>
                </div>
                <div class="form-group">
                    <label asp-for="ContratoPrecio" class="control-label"></label>
                    <input asp-for="ContratoPrecio" class="form-control" />
                    <span asp-validation-for="ContratoPrecio" class="text-danger">
                    </span>
                </div>
                <div class="form-group">
                    <input asp-for="ContratoEstado" type="hidden" value="1" class="form-control" />
                    <span asp-validation-for="ContratoEstado" class="text-danger">
                    </span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-info" />
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
