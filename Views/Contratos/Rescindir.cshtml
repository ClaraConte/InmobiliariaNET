@{
    @model Inmobiliaria.Models.Contrato
    ViewData["Title"] = "Crear contrato";
}

    <h4>Rescindir Contrato</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Recindir" onsubmit="return validate(this);">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="alert alert-danger">
                Si desea rescindir este contrato, usted deberá pagar una multa de @{ @ViewBag.Multa}
            </div>

            <div class="form-group">
                <label class="control-label"> Código del Contrato</label>
               
                <input asp-for="IdContrato"  class="form-control" />

                <span asp-validation-for="IdContrato" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="ContratoDetalle" class="control-label"></label>
                <input type="text" asp-for="ContratoDetalle" class="form-control" />
                <span asp-validation-for="ContratoDetalle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContratoFechaInicio" class="control-label"></label>
                <input asp-for="ContratoFechaInicio" class="form-control" />
                <span asp-validation-for="ContratoFechaInicio" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <label asp-for="ContratoFechaFin" class="control-label"></label>
                <input asp-for="ContratoFechaFin" class="form-control" />
                <span asp-validation-for="ContratoFechaFin" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <label asp-for="ContratoPrecio" class="control-label"></label>
                <input asp-for="ContratoPrecio" class="form-control" />
                <span asp-validation-for="ContratoPrecio" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <input asp-for="ContratoEstado" value="1" class="form-control" />
                <span asp-validation-for="ContratoEstado" class="text-danger">
                </span>
            </div>

            <div class="form-group">
                <label asp-for="IdInmueble" class="control-label"></label>
                <input asp-for="IdInmueble" value="@Model.IdInmueble" class="form-control" />
                <span asp-validation-for="IdInmueble" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <input asp-for="IdUsuario" value="@Model.IdUsuario" class="form-control" />
                <span asp-validation-for="IdUsuario" class="text-danger">
                </span>
            </div>

            <div class="form-group">
                <input type="submit" value="Rescindir" class="btn btn-danger" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

